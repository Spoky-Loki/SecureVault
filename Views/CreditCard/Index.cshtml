@{
    ViewData["Title"] = "Банковские карты";
}

@model List<CreditCardViewModel>

<div class="py-5 text-center">
    <h1>Банковские карты</h1>
    <p class="lead">Здесь вы можете просмотреть свои банковские карты, а также добавить новую банковскую карту.</p>
</div>

<div class="row" align="left">
    <div class="col">
        @{
            foreach (var creditCard in Model)
            {
                <div class="row gy-3">
                    <div class="col-md-6">
                        <label asp-for="@creditCard.Name" class="form-label">Название карты</label>
                        <input type="text" class="form-control" asp-for="@creditCard.Name" placeholder="НАЗВАНИЕ" readonly>
                    </div>
                </div>

                <div class="my-3">
                    @foreach (var cardType in creditCard.CardTypes)
                    {
                        <div class="form-check">
                            <input asp-for="@creditCard.CardType" type="radio" class="form-check-input" name="@creditCard.Name" value="@cardType" disabled>
                            <label class="form-check-label" asp-for="@creditCard.CardType">@cardType карта</label>
                        </div>
                    }
                </div>

                <div class="row gy-3">
                    <div class="col-md-6">
                        <label asp-for="@creditCard.CcName" class="form-label">Имя на карте</label>
                        <input type="text" class="form-control" asp-for="@creditCard.CcName" placeholder="ИМЯ ФАМИЛИЯ" readonly>
                        <small class="text-body-secondary">Полное имя, указанное на карточке</small>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="@creditCard.CcNumber" class="form-label">Номер банковской карты</label>
                        <input type="text" class="form-control" asp-for="@creditCard.CcNumber" placeholder="0000 1111 2222 3333" readonly>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="@creditCard.CcExpiration" class="form-label">Срок действия</label>
                        <input type="text" class="form-control" asp-for="@creditCard.CcExpiration" placeholder="01/24" readonly>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="@creditCard.CVV" class="form-label">CVV</label>
                        <input type="text" class="form-control" asp-for="@creditCard.CVV" placeholder="" readonly>
                    </div>
                </div>

                <a asp-area="" asp-controller="CreditCard" asp-action="Delete" asp-route-id="@creditCard.Id" class="btn btn-secondary btn-light fw-bold border-white bg-white">Удалить карту</a>
                <a asp-area="" asp-controller="CreditCard" asp-action="Password" asp-route-id="@creditCard.Id" class="btn btn-secondary btn-light fw-bold border-white bg-white">Подробнее</a>

                <hr class="my-4">
            }
            <a asp-area="" asp-controller="CreditCard" asp-action="Create" class="btn btn-lg btn-light fw-bold border-white bg-white">Добавить карту</a>
        }
    </div>
</div>
