@{
    ViewData["Title"] = "Сброс пароля";
}

@model ResetPasswordViewModel

<div class="py-5 text-center">
    <h2>Сброс пароля</h2>
</div>

<div class="row" align="left">
    <div class="col">
        <form class="needs-validation" method="post" asp-action="ResetPassword" asp-controller="Account" asp-antiforgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <input asp-for="Code" type="hidden" />
            <div class="row g-3">
                <div class="col-12">
                    <label asp-for="Email" class="form-label">E-mail</label>
                    <input type="email" class="form-control" asp-for="Email" placeholder="you@example.com">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Password" class="form-label">Пароль</label>
                    <input type="password" class="form-control" asp-for="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="ConfirmPassword" class="form-label">Пароль</label>
                    <input type="password" class="form-control" asp-for="ConfirmPassword">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <hr class="my-4">

            <button class="btn btn-lg btn-light fw-bold border-white bg-white" type="submit">Сбросить</button>
        </form>
    </div>
</div>
